<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.ChatActivity"
    android:background="@color/chat_background"
    android:id="@+id/chat_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/whatsappbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@id/llSendMsg"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSendMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp">

        <EditText
            android:id="@+id/etInputMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/msg_bar_style"
            android:hint="Type a message"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="#525254"
            android:textColorHint="#747477" />

        <Button
            android:id="@+id/btnSendMsg"
            android:layout_width="match_parent"
            app:backgroundTint="#09a984"
            android:drawableEnd="@drawable/baseline_send_24"
            android:background="@drawable/msg_bar_send"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="9.5" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>